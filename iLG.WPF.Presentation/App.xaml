<Application x:Class="iLG.WPF.Presentation.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:iLG.WPF.Presentation" 
             xmlns:converter="clr-namespace:iLG.WPF.Presentation.Resources.Converter" 
             StartupUri="/Views/BaseView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/iLGStyle.xaml"/>
                <ResourceDictionary>
                    <converter:ColorConverter x:Key="ColorConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>